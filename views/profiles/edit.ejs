<% include ../partials/header %>
<% include ../partials/nav %>


<div class="container">
	 <h1 style="text-align:center;"><%- profile.username %>' Profile</h1>
  	<div class="row">
  		<div class="col-md-6 col-md-offset-3">
		   
		    <form class="form-horizontal" action="/users/<%- profile._id%>?_method=PUT" method="POST">
			      <div class="form-group">
			        <label for="username">Username:</label>
			        <input  class="form-control" name="profile[username]" value="<%- profile.username %>" >
			      </div>
			       <div class="form-group">
			        <label for="password">City:</label>
			        <input  class="form-control" name="profile[city]" value="<%- profile.city %>" >
			      </div>
			       <div class="form-group">
			        <label for="password">Fullname:</label>
			        <input  class="form-control" name="profile[fullname]" value="<%- profile.fullname %>" >
			      </div>
			       <div class="form-group">
			        <label for="password">State:</label>
			        <input  class="form-control" name="profile[state]"  value="<%- profile.state %>">
			      </div>
		      
		      <button type="submit" class="btn btn-primary">Update</button>
		    </form>
		 </div>   
  	 </div>
</div>

<% include ../partials/footer %>