<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/customcss/cardsIndex.css">    

<% include ../partials/nav %>



<div class ="container">
   <div id="message">
    

   </div>
   <div class="row">
        <h1 class="text-center">Your Trade</h1>
        <div class="col-sm-6 col-md-3 col-md-offset-3">
           <h3 class="text-center"> Requested Card</h3>
           <div class = "thumbnail" >
                    <img src="<%- sellerCard[0].img %>" alt="Someone stole the photo!!!">
           </div>
            
         
        </div>
        <div class="col-sm-6 col-md-3 cardToTrade">
           <h3 class="text-center"> Card You Offer</h3>
           <div class = "thumbnail" >
                   <p>Click one from your availble cards to add it</p>
           </div>
            
         
        </div>



   </div>
   <div class = "row">
    <h2 class="text-center">Your Avalaible Cards to Offer</h2>

    <% buyerCards.forEach((card)=> { %>
            <div class = "col-sm-6 col-md-3 cardsFromCollection" >
                <div class = "thumbnail" >
                    <img src="<%- card.img %>" alt="Someone stole the photo!!!">
                </div>
            
              
            </div>

      <% }) %>
     
   
   
   </div>

</div>








<% include ../partials/footer %>
