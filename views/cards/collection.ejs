<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/customcss/cardsIndex.css">    

<% include ../partials/nav %>



<div class ="container">
   <div id="message">
      
   </div>
   <div class = "row">
    <h2 class="text-center"><%- profile.username %>'s Collection</h2>
    <% profile.cards.forEach((card)=> { %>
            <div class = "col-sm-6 col-md-3" >
                <div class = "thumbnail" >
                    <img src="<%- card.img %>" alt="Someone stole the photo!!!">
                </div>
            
               <div class = "caption">
                  <h3><%- card.name %></h3>
                  <p><%- card.flavor %></p>
                    <% if (currentUser && String(currentUser._id) !== String(profile._id)) { %>
                  <p>
                     <a href = "/trades/new?requestedCardId=<%-card.id %>" value="<%-card._id %>" class = "btn btn-success" role = "button">
                        Request trade
                     </a> 
                  </p>
                   <% } %>
                   
                  
               </div>
            </div>

      <% }) %>
     
   
   
   </div>

</div>








<% include ../partials/footer %>
